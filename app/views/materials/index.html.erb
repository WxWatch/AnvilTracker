<p id="notice"><%= notice %></p>

<h1>Listing Materials</h1>

<div class="index_tables">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Manufacturer</th>
        <th>Description</th>
        <th>Extruder temp</th>
        <th>Bed temp</th>
        <th>Notes</th>
        <th>Density</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @materials.each do |material| %>
        <tr>
          <td><%= material.name %></td>
          <td><%= material.manufacturer %></td>
          <td><%= material.description %></td>
          <td><%= material.extruder_temp %></td>
          <td><%= material.bed_temp %></td>
          <td><%= material.notes %></td>
          <td><%= material.density %></td>
          <td><%= link_to 'Details', material_path(material), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_material_path(material), class: 'btn btn-warning' %>
          <%= link_to 'Delete', material_path(material),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

